<idea-plugin version="2">
  <id>net.tweakers.intellij.thesaurus</id>
  <name>Thesaurus</name>
  <version>1.0</version>
  <vendor email="pascal.de.vink@gmail.com" url="http://www.privatevoid.nl">Pascal de Vink</vendor>

  <description><![CDATA[
      Lookup a synonym for the word under the cursor for easier naming of your variable,
      parameters, methods and classes using one of the two supportd online thesaurus providers.
      ]]></description>

  <change-notes><![CDATA[
      First version
      ]]>
  </change-notes>

  <!-- please see http://confluence.jetbrains.net/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="107.105"/>

  <!-- please see http://confluence.jetbrains.net/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
       on how to target different products -->
  <depends>com.intellij.modules.lang</depends>

  <application-components>
    <!-- Add your application components here -->
      <component>
          <implementation-class>net.tweakers.intellij.thesaurus.config.ConfigValues</implementation-class>
          <interface-class>net.tweakers.intellij.thesaurus.config.ConfigValues</interface-class>
      </component>
      <component>
          <implementation-class>net.tweakers.intellij.thesaurus.config.PluginConfiguration</implementation-class>
          <interface-class>net.tweakers.intellij.thesaurus.config.PluginConfiguration</interface-class>
          <option name="workspace" value="true"/>
      </component>
  </application-components>

  <project-components>
    <!-- Add your project components here -->
  </project-components>

  <actions>
    <!-- Add your actions here -->
      <action id="lookupThesaurus" class="net.tweakers.intellij.thesaurus.action.ThesaurusAction" text="Thesaurus..."
              description="Looksup a synonym of a selected word using a thesaurus">
          <add-to-group group-id="RefactoringMenu" anchor="last"/>
      </action>
  </actions>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>
</idea-plugin>